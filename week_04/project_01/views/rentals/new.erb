<h2>Create New Rental</h2>
<form method="POST" action="/rentals">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="customer">Customer:</label>
      <select name="customer_id" id="customer">
        <% @customers.each do |customer| %>
        <option value=<%= customer.id %>><%= customer.name%></option>
        <% end %>
      </select>
    </div>

    <div class="form-el">
      <label for="stock">Select Product:</label>
      <select name="stock_id" id="stock">
        <% @stocks.each do |stock| %>
        <option value=<%= stock.id %>><%= stock.item_name %></option>
        <% end %>
      </select>
    </div>



    <div class="form-el">
      <input type="submit" value="Create Customer Rental"/>
    </div>

  </div>
</form>
