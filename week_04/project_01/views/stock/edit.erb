<h2>Edit <%= @stock.item_name %></h2>
<form method="POST" action="/stock/<%= @stock.id %>">
  <div class="form-wrapper">

    <div class="form-el">
      <label for="name"> Name:</label>
      <input type="text" name="name" id="name" value="<%= @stock.item_name %>"/>
    </div>

    <div class="form-el">
      <label for="inventory"> Inventory:</label>
      <input type="text" name="inventory" id="inventory" value="<%= @stock.inventory %>"/>
    </div>

    <div class="form-el">
      <label for="price"> Price:</label>
      <input type="text" name="price" id="price" value="<%= @stock.price %>"/>
    </div>

    <div class="form-el">
      <input type="submit" value="Stock Edit"/>
    </div>

  </div>
</form>
